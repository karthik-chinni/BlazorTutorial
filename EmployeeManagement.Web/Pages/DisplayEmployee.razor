@inherits DisplayEmployeeBase

<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">

    <div class="card-header">

        <input type="checkbox" checked="@IsSelected" @onchange="chkCount_Changed" />

        <h3>@employee.FirstName @employee.LastName</h3>
    </div>

    <img class="card-img-top" style="height:200px; width:auto" src="@employee.PhotoPath" />

    @if (ShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"employeedetails/{employee.EmployeeId}")" class="btn btn-primary m-1">View</a>
            <a href="#" class="btn btn-primary m-1">Edit</a>
            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    }

</div>

